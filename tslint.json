{
  "extends": "tslint-microsoft-contrib",
  "rules": {
    "no-reserved-keywords": false,
    "missing-jsdoc": false,
    "no-relative-imports": false,
    "typedef": false,
    "no-unsafe-any": false,
    "quotemark": [true, "single", "jsx-double"],
    "completed-docs": false,
    "strict-boolean-expressions": false
  },
  "linterOptions": {
    "exclude": [
      "node_modules",
      "lib",
      "./packages/prime-core/**/*",
      "./packages/prime-ui/**/*"
    ]
  }
}
